{
  "name": "lclplauncher",
  "version": "1.2.8",
  "description": "A manager for LCLP's environments.",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "LCLP",
  "license": "MIT",
  "build": {
    "publish": [
      {
        "provider": "generic",
        "url": "http://lclpnet.work/lclplauncher/files"
      }
    ],
    "appId": "lclplauncher",
    "productName": "LCLPLauncher",
    "copyright": "Copyright Â© 2020 ${author}",
    "extraFiles": [
      "bin"
    ],
    "mac": {
      "category": "public.app-category.games"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "guid": "lclplauncher"
    }
  },
  "devDependencies": {
    "electron": "^8.2.5",
    "electron-builder": "^22.6.0"
  },
  "dependencies": {
    "bootstrap": "^4.4.1",
    "electron-log": "^4.1.2",
    "electron-store": "^5.1.1",
    "electron-updater": "^4.3.1",
    "material-design-icons": "^3.0.1",
    "yargs": "^15.3.1"
  }
}
